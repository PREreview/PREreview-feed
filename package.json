{
  "name": "prereview-feed",
  "version": "1.0.0",
  "description": "Generating a feed of reviews from outbreaksci.prereview.org",
  "license": "MIT",
  "keywords": [],
  "bugs": {
    "url": "https://github.com/throneless-tech/PREreview-feed/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "homepage": "",
  "main": "./dist/index.js",
  "bin": {
    "prereview-feed": "./dist/index.js"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "parcel build src/index.js -d dist"
  },
  "engines": {
    "node": ">=12.0"
  },
  "browserslist": {
    "production": [
      "last 3 chrome versions",
      "last 3 firefox versions",
      "last 3 safari versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./.jest/env.js"
    ],
    "modulePathIgnorePatterns": [
      "./src/frontend/data"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:node/recommended-module",
      "plugin:prettier/recommended",
      "plugin:promise/recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es2017": true,
      "browser": true,
      "node": true,
      "jest/globals": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "node/no-extraneous-import": [
        "error",
        {
          "allowModules": [
            "lodash"
          ]
        }
      ],
      "node/shebang": [
        "error",
        {
          "convertPath": {
            "src/**/*.js": [
              "^src/(.+?)\\.js$",
              "dist/$1.js"
            ]
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "feed": "^4.2.1",
    "node-fetch": "^2.6.0",
    "xmlbuilder2": "^2.3.1"
  }
}
