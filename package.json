{
  "name": "prereview-feed",
  "version": "1.0.0",
  "description": "Generating a feed of reviews from outbreaksci.prereview.org",
  "license": "MIT",
  "keywords": [],
  "bugs": {
    "url": "https://github.com/throneless-tech/PREreview-feed/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "homepage": "",
  "main": "./dist/backend/index.js",
  "bin": {
    "prereview-feed": "./dist/backend/index.js"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
  },
  "engines": {
    "node": ">=12.0"
  },
  "browserslist": {
    "production": [
      "last 3 chrome versions",
      "last 3 firefox versions",
      "last 3 safari versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "plugins": [
      "react-imported-component/babel"
    ],
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              ">2%",
              "last 1 Edge version",
              "last 2 Safari version",
              "last 1 Firefox version"
            ]
          },
          "loose": true
        }
      ]
    ],
    "env": {
      "server": {
        "plugins": [
          "react-imported-component/babel",
          "@babel/plugin-syntax-dynamic-import",
          [
            "transform-inline-environment-variables",
            {
              "include": [
                "NODE_ENV",
                "npm_package_name",
                "npm_package_version",
                "npm_package_description"
              ]
            }
          ]
        ]
      },
      "client": {
        "plugins": [
          [
            "react-imported-component/babel"
          ]
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./.jest/env.js"
    ],
    "modulePathIgnorePatterns": [
      "./src/frontend/data"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:node/recommended-module",
      "plugin:prettier/recommended",
      "plugin:promise/recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es2017": true,
      "browser": true,
      "node": true,
      "jest/globals": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "node/no-extraneous-import": [
        "error",
        {
          "allowModules": [
            "lodash"
          ]
        }
      ],
      "node/shebang": [
        "error",
        {
          "convertPath": {
            "src/**/*.js": [
              "^src/(.+?)\\.js$",
              "dist/$1.js"
            ]
          }
        }
      ]
    }
  }
}
